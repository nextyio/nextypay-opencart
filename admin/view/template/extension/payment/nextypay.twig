{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">

      <div class="pull-right">
        <button type="button" onclick="$('#form').submit();" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
          <i class="fa fa-save"></i>
        </button>

        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
          <i class="fa fa-reply"></i>
        </a>

      </div>

      <h1><img src="view/image/logo.png" alt="" />{{ heading_title }}</h1>

      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>

    </div>
  </div>
  <div class="container-fluid">

    {% if error_walletAddress_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_walletAddress_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    {% if error_exchangeAPI_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_exchangeAPI_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    {% if error_endPointAddress_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_endPointAddress_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    {% if error_blocks_info_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_blocks_info_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>

      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">
              <span data-toggle="tooltip" title="{{ help_status }}">{{ entry_status }}</span>
            </label>
            <div class="col-sm-10">
              <select class="form-control" name="payment_nextypay_status">
                {% if payment_nextypay_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-title"><span data-toggle="tooltip" title="{{ help_title }}">{{ entry_title }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="{{ nextypay_prefix }}title" value="{{ title }}" placeholder="{{ entry_title }}" id="input-title" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">
              <span data-toggle="tooltip" title="{{ help_order_status }}">{{ entry_order_status }}</span>
            </label>
            <div class="col-sm-10">
              <select class="form-control" name="{{ nextypay_prefix }}order_status_id">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id  ==  order_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-description"><span data-toggle="tooltip" title="{{ help_description }}">{{ entry_description }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="{{ nextypay_prefix }}description" value="{{ description }}" placeholder="{{ entry_description }}" id="input-description" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-instruction"><span data-toggle="tooltip" title="{{ help_instruction }}">{{ entry_instruction }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="{{ nextypay_prefix }}instruction" value="{{ instruction }}" placeholder="{{ entry_instruction }}" id="input-instruction" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-walletAddress"><span data-toggle="tooltip" title="{{ help_walletAddress }}">{{ entry_walletAddress }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="{{ nextypay_prefix }}walletAddress" value="{{ walletAddress }}" placeholder="{{ entry_walletAddress }}" id="input-walletAddress" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-exchangeAPI"><span data-toggle="tooltip" title="{{ help_exchangeAPI }}">{{ entry_exchangeAPI }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="{{ nextypay_prefix }}exchangeAPI" value="{{ exchangeAPI }}" placeholder="{{ entry_exchangeAPI }}" id="input-exchangeAPI" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-endPointAddress"><span data-toggle="tooltip" title="{{ help_endPointAddress }}">{{ entry_endPointAddress }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="{{ nextypay_prefix }}endPointAddress" value="{{ endPointAddress }}" placeholder="{{ entry_endPointAddress }}" id="input-endPointAddress" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-min_blocks_saved_db"><span data-toggle="tooltip" title="{{ help_min_blocks_saved_db }}">{{ entry_min_blocks_saved_db }}</span></label>
            <div class="col-sm-10">
              <input type="number" name="{{ nextypay_prefix }}min_blocks_saved_db" value="{{ min_blocks_saved_db }}" placeholder="{{ entry_min_blocks_saved_db }}" id="input-min_blocks_saved_db" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-max_blocks_saved_db"><span data-toggle="tooltip" title="{{ help_max_blocks_saved_db }}">{{ entry_max_blocks_saved_db }}</span></label>
            <div class="col-sm-10">
              <input type="number" name="{{ nextypay_prefix }}max_blocks_saved_db" value="{{ max_blocks_saved_db }}" placeholder="{{ entry_max_blocks_saved_db }}" id="input-max_blocks_saved_db" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-blocks_loaded_each_request"><span data-toggle="tooltip" title="{{ help_blocks_loaded_each_request }}">{{ entry_blocks_loaded_each_request }}</span></label>
            <div class="col-sm-10">
              <input type="number" name="{{ nextypay_prefix }}blocks_loaded_each_request" value="{{ blocks_loaded_each_request }}" placeholder="{{ entry_blocks_loaded_each_request }}" id="input-blocks_loaded_each_request" class="form-control" />
            </div>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>
{{ footer }}
